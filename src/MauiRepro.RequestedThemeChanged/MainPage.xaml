<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiRepro.RequestedThemeChanged.MainPage">
    <Border HeightRequest="180" WidthRequest="320" HorizontalOptions="Center" VerticalOptions="Center" 
            Background="{AppThemeBinding Light=Yellow, Dark=Blue}">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="12,12,12,12" />
        </Border.StrokeShape>
        <Label FontSize="26" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" 
               TextColor="{AppThemeBinding Light=Blue, Dark=Yellow}"
               Text="My color should change with the system theme." />
    </Border>
    
</ContentPage>
